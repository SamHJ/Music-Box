<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".SplashScreen">

    <ImageView
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/splash_imgv"
        android:src="@drawable/b"
        android:layout_height="400dp" />


    <TextView
        android:layout_width="match_parent"
        android:text="All rights reserved, GreenLeaf Studios "
        android:gravity="center"
        android:id="@+id/layFirst"
        android:layout_marginTop="50dp"
        android:layout_below="@id/splash_imgv"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:text="www.greenleafstudios.com.ng"
        android:gravity="center"
        android:id="@+id/laySecond"
        android:layout_below="@id/layFirst"
        android:layout_height="wrap_content" />

</RelativeLayout>