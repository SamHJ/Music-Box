<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/userhome_navigation_opener_include"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Music Box"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_margin="14dp"/>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/userhome_navigation_opener_include"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:elevation="5dp"
            app:cardCornerRadius="5dp"
            android:id="@+id/cardview"
            android:layout_margin="20dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_play_btn"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/home_featured_text"
                    android:textColor="#000000"
                    android:layout_gravity="center"

                    android:text="Most Girls By Hailee Steinfield"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@+id/cardview"
            android:text="Quick actions"
            android:id="@+id/quick_actions_text"
            android:layout_margin="5dp"
            android:textSize="20sp"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/quick_actions_buttons_layout"
                android:layout_below="@+id/quick_actions_text"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/orange"
                    android:layout_height="100dp">

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:clickable="true"
                        android:id="@+id/favourites_btn"
                        android:focusable="true"
                        android:background="@drawable/rounded_btn"
                        android:src="@drawable/ic_favorite"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Favourites"
                        android:textSize="15sp"
                        android:textColor="@color/colorWhite"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="100dp">

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/top_songs_btn"
                        android:background="@drawable/rounded_btn"
                        android:src="@drawable/ic_show_chart"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Top Songs"
                        android:textSize="18sp"
                        android:textColor="@color/colorWhite"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/bluelight"
                    android:layout_height="100dp">

                    <ImageButton
                        android:layout_width="50dp"
                        android:id="@+id/random_btn"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_btn"
                        android:tint="#ffffff"
                        android:src="@drawable/ic_shuffle"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Random"
                        android:textSize="18sp"
                        android:textColor="@color/colorWhite"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/quick_actions_buttons_layout"
                android:background="#f5f5f5"
                android:id="@+id/divider_line"
                android:orientation="horizontal"
                android:layout_height="2dp">

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_below="@+id/divider_line"
                android:text="Recent Tracks"
                android:layout_marginTop="20dp"
                android:id="@+id/recents_text"
                android:layout_margin="5dp"
                android:textSize="20sp"
                />



            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:id="@+id/recent_tracks_recyclerview"
                android:layout_below="@+id/recents_text"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
            <ProgressBar
                android:layout_width="match_parent"
                android:id="@+id/loading_music_bar"
                android:layout_below="@+id/recents_text"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />


            <!--<HorizontalScrollView-->
                <!--android:layout_width="match_parent"-->
                <!--android:gravity="center"-->
                <!--android:scrollbars="none"-->
                <!--android:layout_below="@+id/recents_text"-->
                <!--android:layout_height="wrap_content">-->

                <!--<include layout="@layout/tracks_layout"-->
                    <!--android:layout_margin="10dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_width="wrap_content" />-->

            <!--</HorizontalScrollView>-->




        </RelativeLayout>

    </ScrollView>

</RelativeLayout>